{%- if params.items %}
<nav class="app-c-side-navigation {{- ' ' + params.classes if params.classes }}" role="navigation" {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  <ul class="app-c-side-navigation__list">
    {% for item in params.items %}
    <li class="app-c-side-navigation__list-item {{- ' app-c-side-navigation__list-item--current' if item.active }} {{- ' ' + item.classes if item.classes }}">
      {% if item.href %}
      <a class="govuk-link govuk-link--no-visited-state" href="{{ item.href }}" {%- for attribute, value in item.attributes %} {{attribute}}="{{value}}"{% endfor %}>
        {{- item.html | safe if item.html else item.text -}}
      </a>
      {% else %}
        {{- item.html | safe if item.html else item.text -}}
      {% endif %}
    </li>
    {% endfor -%}
  </ul>
</nav>
{% endif -%}
